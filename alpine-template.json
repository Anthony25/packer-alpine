{
  "builders": [
    {
      "boot_command": [
        "root<enter><wait>",
        "ip link set eth0 up \u0026\u0026 udhcpc -i eth0<enter><wait>",
        "wget -qO- http://{{ .HTTPIP }}:{{ .HTTPPort }}/enable-ssh.sh | ash<enter>"
      ],
      "boot_wait": "{{ user `boot_wait` }}",
      "disk_size": "{{ user `disk_size` }}",
      "format": "{{ user `format` }}",
      "headless": "{{ user `headless`}}",
      "http_directory": "srv",
      "iso_checksum": "{{ user `iso_checksum_type` }}:{{ user `iso_checksum` }}",
      "iso_url": "{{ user `iso_url` }}",
      "shutdown_command": "poweroff",
      "shutdown_timeout": "30s",
      "ssh_password": "root",
      "ssh_timeout": "{{ user `ssh_timeout` }}",
      "ssh_username": "root",
      "type": "qemu",
      "vm_name": "{{ user `hostname` }}.{{ user `format` }}"
    }
  ],
  "provisioners": [
    {
      "destination": "/root/answers",
      "source": "answers",
      "type": "file"
    },
    {
      "execute_command": "{{ .Vars }} AUTHORIZED_KEYS='{{ user `authorized_keys` }}' IP4='{{ user `ip4` }}' IP6='{{ user `ip6` }}' SWAPSIZE='{{ user `mirrorlist` }}' HOSTNAMEOPTS='{{ user `hostname` }}' PROXYOPTS='{{ user `proxy` }}' ash '{{ .Path }}'",
      "script": "scripts/install-base.sh",
      "type": "shell"
    }
  ],
  "variables": {
    "authorized_keys": "",
    "boot_wait": "15s",
    "disk_size": "5120",
    "format": "qcow2",
    "headless": "true",
    "hostname": "localhost",
    "ip4": "",
    "ip6": "",
    "iso_checksum": "bb87644518e85972582e25b5c872854f28de615e04cb58c1cdaadc46d3ae60ba",
    "iso_checksum_type": "sha256",
    "iso_url": "http://dl-cdn.alpinelinux.org/alpine/v3.12/releases/x86_64/alpine-virt-3.12.1-x86_64.iso",
    "proxy": "none",
    "ssh_timeout": "20m",
    "swap_size": "0"
  }
}

